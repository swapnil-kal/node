pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/swapnil-kal/node.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '/path/to/npm install' // Replace '/path/to/npm' with the actual path to your npm binary
            }
        }

        stage('Run Tests') {
            steps {
                sh '/path/to/npm test' // Replace '/path/to/npm' with the actual path to your npm binary
            }
        }

        stage('Deploy') {
            steps {
                sh 'ssh user@hostname "cd /path/to/deploy && /path/to/npm install && /path/to/npm start"' // Replace '/path/to/npm' with the actual path to your npm binary
            }
        }
    }
    post {
        always {
            // Archive artifacts, send notifications, etc.
        }
    }
}

